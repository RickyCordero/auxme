extends layout

block content
 h2.page-header Register
 p Please register using the form below
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/register',enctype='multipart/form-data')
  .form-group
    .input-field
      label(for='name') Name
      input.form-control(id='name' name='name', type='text')
  .form-group
    .input-field
      label(for='email') Email
      input.form-control(id='email' name='email', type='email')
  .form-group
    .input-field
      label(for='username') Username
      input.form-control(id='username' name='username', type='text')
  .form-group
    .input-field
      label(for='password') Password
      input.form-control(id='password' name='password', type='password')
  .form-group
    .input-field
      label(for='password2') Confirm Password
      input.form-control(id='password2' name='password2', type='password')
  //- .form-group
  //-  label Profile Image
  //-  input.form-control(name='profileimage', type='file')
  input(class="waves-effect btn-flat" type='submit', name='submit',value='Register')