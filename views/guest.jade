    $('#show-players').on('click', event => {
      $.get('/guest/getplayers', (data, status)=>{
        console.log(data);
        $('#players-list').empty();
        data.players.forEach((player, playerId)=>{
          const html = `
          ID: ${player.id}
          <br>
          Nickname: ${player.nickname}
          <br>
          Spotify access token: ${player.auth.spotify}
          `;
          $('#players-list').append(html);
        });
      });
