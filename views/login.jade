    .input-field
      label(for='username') Username
      input.form-control(id='username' name='username', type='text')
  .form-group
    .input-field
      label(for='password') Password
      input.form-control(id='password' name='password', type='password')
  input(class="waves-effect btn-flat" type='submit', name='submit',value='Login')
