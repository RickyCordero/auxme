extends layout
block header
  .nav-wrapper
      a(href='#', data-target='sidenav-left', class="button-collapse sidenav-trigger")
        i.material-icons.menu menu
block content
 h2.page-header.unselectable Log In
 p.unselectable Please log in below
 if errors
  each error, i in errors
   div.alert.alert-danger.unselectable #{error.msg}
 form(method='post', action='/users/login')
  .form-group.unselectable
    .input-field
      label(for='username') Username
      input.form-control(id='username' name='username', type='text')
  .form-group.unselectable
    .input-field
      label(for='password') Password
      input.form-control(id='password' name='password', type='password')
  button(class="waves-effect btn-flat" id="loginButton") Log In